{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "opener:default",
    "dialog:default",
    "fs:default",
    "deep-link:default",
    "core:webview:allow-print",
    "shell:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/ffmpeg",
          "cmd": "ffmpeg",
          "sidecar": true
        }
      ]
    },
    "stronghold:default"
  ],
  "fs": {
    "scope": [
      "$HOME/**",
      "$DOWNLOADS/**",
      "$DESKTOP/**",
      "$DOCUMENTS/**",
      "$PICTURES/**",
      "$VIDEOS/**"
    ]
  }
}