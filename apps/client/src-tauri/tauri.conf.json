{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "boreal",
  "version": "0.1.0",
  "identifier": "com.client.boreal",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:6320",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "",
        "width": 850,
        "height": 700,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/ffmpeg"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "boreal"
        ]
      }
    }
  }
}