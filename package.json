{
  "name": "boreal-monorepo",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "desktop:dev": "turbo run --filter=boreal desktop:dev",
    "desktop:build": "turbo run --filter=boreal desktop:build",
    "android:dev": "turbo run --filter=boreal android:dev",
    "ios:dev": "turbo run --filter=boreal ios:dev",
    "deploy:template": "bun sst deploy --stage production"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "typescript": "~5.9.3"
  },
  "packageManager": "bun@1.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "qr-scanner": "^1.4.2",
    "sst": "^3.17.25"
  }
}